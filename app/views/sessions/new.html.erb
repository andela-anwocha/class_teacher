<h1>Login</h1>

<% if flash[:errors] %>
  <h2>Email or Password Invalid</h2>
<% end %>

<%= form_tag "/sessions/create" do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %><br/>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br/>

  <%= submit_tag "Sign In" %>
<% end %><br/>
<%= link_to "Sign Up", signup_path %>